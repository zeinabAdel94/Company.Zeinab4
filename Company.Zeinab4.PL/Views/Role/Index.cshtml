@model  IEnumerable<RoleDTO>
@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-primary my-3">All Roles</h1>


<br /><br />

<div>
    <form >
        <div class="container">
            <row>

                <div class="col-md-6 d-flex justify-content-center gap-3  ">
                    <input name="SearchInput" placeholder="SearchByName" class="form-control col-md-10" />
                    <input type="submit" class="btn btn-success col-md-2" value="Search"  />

                </div>

            </row>

        </div>

    </form>

</div>




@if (Model.Count() > 0)
{
    <table class="table  table-hover  table-striped my-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
               
                <th>Roles</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                  
               

                    <partial name="_ButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info"> <h3>There Are Not Roles :(</h3></div>
}

