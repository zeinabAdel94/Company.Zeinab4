@model RoleDTO;
@{
    ViewData["Title"] = "Update";
}

<h1 class="text-primary">Update Role </h1>
<br /><br />
<form asp-action="Update" enctype="multipart/form-data">

    <partial name="RolePartialView/_CreateAndEditPartialView.cshtml" />
 
    <div class="my-3">
        <a asp-action="AddOrRemoveUser" asp-route-roleId ="@Model.Id" asp-controller="Role" class="btn btn-success">Add Or Remove User</a>
      
        <input type="submit" value="Save" class="btn btn-warning" />
        <a asp-action="Index" asp-controller="Role" class="btn btn-dark"> BackToList</a>
    </div>


</form>
