@model  IEnumerable<UserToReturnDTO>
@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-primary my-3">All Users</h1>
<br /><br />

<div>
    <form >
        <div class="container">
            <row>

                <div class="col-md-6 d-flex justify-content-center gap-3  ">
                    <input name="SearchInput" placeholder="SearchByName" class="form-control col-md-10" />
                    <input type="submit" class="btn btn-success col-md-2" value="Search"  />

                </div>

            </row>

        </div>

    </form>

</div>
@if(!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div>

        <p class="alert alert-info">@TempData["Message"]</p>
    </div>

}



<br /><br />


@if (Model.Count()> 0)
{ 
    <table class="table  table-hover  table-striped my-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Eamil</td>
                    <td>@item.Roles</td>
                    @foreach(var role in item.Roles)
                    {
                        <span>@role</span>
                    }
                   
                    <partial name="_ButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>

 }else 
{
    <div class="alert alert-info"> <h3>There Are Not Users :(</h3></div>
} 

