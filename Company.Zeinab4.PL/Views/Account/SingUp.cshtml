@model SingUpDTO;
@{
	ViewData["Title"] = "SingUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="alert alert-danger"></div>
		<form asp-action="SingUp" >
			<input class="text" type="text" asp-for="UserName" placeholder="Username" required="" >
			<input class="text" type="text" asp-for="FirstName" placeholder="FirstName" required="">
			<input class="text" type="text" asp-for="LastName" placeholder="LastName" required="">
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" type="password" asp-for =" ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"></div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SingIn"> Login Now!</a></p>
	</div>
</div>
@section SectionVailidation{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

