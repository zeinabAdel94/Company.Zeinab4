@model ForgetPasswordDTO
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="alert alert-danger"></div>
		<form asp-action="ResetPasswordUrl">
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required>

			<input type="submit" value="Reset Password">
		</form>
		<p> <a asp-action="SingIn">LogIn Now!</a></p>
	
	</div>
</div>
@section SectionVailidation {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}



