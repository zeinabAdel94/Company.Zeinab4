@model  IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-primary my-3">All Employees</h1>
<br /><br />

<div class="my-3">
    <a asp-action="Create" asp-controller="Employee" class="btn btn-primary"> Create Employee </a>
</div>
<br /><br />

@if (Model.Count()> 0)
{
    <table class="table  table-hover  table-striped my-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive </th>
                <th>IsDeleted</th>
                <th>HiringDate</th>
                <th>CreateAt</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreateAt</td>
                    <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"> Details</a></td>
                    <td><a asp-action="Update" asp-route-id="@item.Id"   class="btn btn-success"> Update</a></td>
                    <td><a asp-action="Delete"  asp-route-id="@item.Id" class="btn  btn-danger"> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

}else 
{
    <div class="alert alert-info"> <h3>There Are Not Employee :(</h3></div>
}

