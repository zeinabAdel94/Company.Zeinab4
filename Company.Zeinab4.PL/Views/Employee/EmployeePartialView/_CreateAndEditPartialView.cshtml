@model CreateEmployeeDTO;

@{
    var departments =new SelectList(ViewData["Departments"] as IEnumerable<Department>,"Id","Name");
}
<div>
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" name="Name" />
    <span asp-validation-for="Name" class="alert-danger"></span>
</div>

<div>
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control"  />

</div>

<div>
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control"  />
    <span asp-validation-for="Email" class="alert-danger"></span>
</div>
<div>
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="alert-danger"></span>
</div>

<div>
    <label asp-for="phone" class="col-form-label"></label>
    <input asp-for="phone" class="form-control"/>
    <span asp-validation-for="phone" class="alert-danger"></span>
</div>

<div>
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="alert-danger"></span>
</div>
<div>

    <label asp-for="IsActive" class="col-form-label"></label>
    <input asp-for="IsActive" class="form-check"  />

</div>

<div>
    <label asp-for="IsDeleted" class="col-form-label"></label>
    <input type="checkbox" asp-for="IsDeleted" class="form-check" />

</div>
<div>
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="alert-danger"></span>
</div>
<div>
    <label asp-for="CreateAt" class="col-form-label"></label>
    <input asp-for="CreateAt" class="form-control" />
    <span asp-validation-for="CreateAt" class="alert-danger"></span>
</div>

<div>
    <label asp-for="DepartmentId" class="col-form-label"></label>
    <select asp-for="DepartmentId" asp-items="departments" class="form-control">
    <option value="@null">---Select Department---</option>
  </select>
  
</div>
<div>
    <label asp-for="Image" class="col-form-label"></label>
    <input asp-for="Image" class="form-control"  />

</div>